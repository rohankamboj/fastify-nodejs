{
  "name": "fastify-typescript-project",
  "version": "1.0.0",
  "description": "A Fastify project with TypeScript",
  "main": "dist/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:nodemon": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "test": "jest",
    "migrate": "sequelize-cli db:migrate"
  },
  "dependencies": {
    "@fastify/env": "^4.2.0",
    "fastify": "^4.17.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.1"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/validator": "^13.7.17",
    "nodemon": "^3.1.7",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  }
}
